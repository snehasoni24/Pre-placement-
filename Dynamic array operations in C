#include <stdio.h>
#include <stdlib.h>
int main(){
    int *arr=NULL, size=0, ch, val, pos;
    do{
        printf("\n1.Insert 2.Delete 3.Display 4.Exit: ");
        scanf("%d",&ch);
        if(ch==1){
            printf("Value: "); scanf("%d",&val);
            arr = realloc(arr,(size+1)*sizeof(int));
            arr[size++] = val;
        } else if(ch==2 && size>0){
            printf("Pos: "); scanf("%d",&pos);
            if(pos<size) for(int i=pos;i<size-1;i++) arr[i]=arr[i+1];
            size--;
        } else if(ch==3){
            for(int i=0;i<size;i++) printf("%d ",arr[i]);
        }
    }while(ch!=4);
    free(arr);
}
